@model ClassVisitTimeSlotViewModel

@{
  ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
  @Html.AntiForgeryToken()
  @Html.ValidationSummary(true)

  <fieldset>
    <legend>ClassVisitTimeSlotViewModel</legend>

    @Html.HiddenFor(model => model.Id)

    <div class="editor-label">
      @Html.LabelFor(model => model.StartDateTime)
    </div>
    <div class="editor-field">
      @Html.EditorFor(model => model.StartDateTime)
      @Html.ValidationMessageFor(model => model.StartDateTime)
    </div>

    <div class="editor-label">
      @Html.LabelFor(model => model.EndDateTime)
    </div>
    <div class="editor-field">
      @Html.EditorFor(model => model.EndDateTime)
      @Html.ValidationMessageFor(model => model.EndDateTime)
    </div>

    <div class="editor-label">
      @Html.LabelFor(model => model.SeatsAvailable)
    </div>
    <div class="editor-field">
      @Html.EditorFor(model => model.SeatsAvailable)
      @Html.ValidationMessageFor(model => model.SeatsAvailable)
    </div>

    <div class="editor-label">
      <span class="editor-label-inline">
        @Html.LabelFor(model => model.SeatsRemaining)
      </span>
      <span class="editor-field-inline">
        @Html.DisplayFor(model => model.SeatsRemaining)
      </span>
    </div>

    <p>
      <input type="submit" value="Save" />
    </p>
  </fieldset>
}

<div>
  @Html.ActionLink("Back to List", "Index")
</div>

@section scripts
{
  <script>
    $(function () {
      $('#StartDateTime').datetimepicker({ timeFormat: "hh:mm tt" });
      $('#EndDateTime').datetimepicker({ timeFormat: "hh:mm tt" });
    });
  </script>
}

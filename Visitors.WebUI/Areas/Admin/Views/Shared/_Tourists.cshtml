@model IEnumerable<TouristViewModel>

<table id="TouristsTable" class="sortable-table full-width highlight-rows">
  <thead>
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.Tour)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.FullName)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Email)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Phone)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.City)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.State)
      </th>
      <th>
        Number<br/>in Party
      </th>
      <th></th>
    </tr>
  </thead>

  @foreach (var item in Model)
  {
    <tr>
      <td>
        @Html.DisplayFor(modelItem => item.Tour.StartTime)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.FullName)
      </td>
      <td>
        <a href="mailto:@item.Email">@item.Email</a>
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.Phone)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.City)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.State)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.NumberInParty)
      </td>
      <td>
        @Html.ActionLink("Edit", "Edit", "Tourist", new { id = item.Id }, null) | 
        @Html.ActionLink("Details", "Details", "Tourist", new { id = item.Id }, null) |
        @Html.ActionLink("Delete", "Delete", "Tourist", new { id = item.Id }, null)
      </td>
    </tr>
  }

</table>

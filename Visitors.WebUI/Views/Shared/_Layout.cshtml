@using System.Configuration
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>@ViewBag.Title - Visit McIntire</title>
  <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
  <meta name="viewport" content="width=device-width" />
  @Styles.Render("~/Content/css")
  @Scripts.Render("~/bundles/modernizr")
</head>
<body>
  <header>
    <div id="TestSiteWarning">
      <h3>This site is for testing and demostrating only. It is not a live site.</h3>
    </div>
    <div class="content-wrapper">

      <div class="float-left">
        <p class="site-title">@Html.ActionLink("Visit McIntire", "Create", "ClassVisitor")</p>
        <ul id="submenu">
          <li>@Html.ActionLink("Class Visit", "Create", "ClassVisitor") | </li>
          <li>@Html.ActionLink("Tour McIntire", "Create", "Tourist")</li>
        </ul>
      </div>
      <div class="float-right no-print">
        <nav>
          <ul id="menu">
            <li>@Html.ActionLink("Home", "Create", "ClassVisitor")</li>
            <li>@Html.ActionLink("About", "About", "Home")</li>
            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
          </ul>
        </nav>
      </div>
    </div>
  </header>
  <div id="body">
    @RenderSection("featured", required: false)
    <section class="content-wrapper main-content clear-fix">
      @RenderBody()
    </section>
  </div>
  <footer>
  </footer>

  @Scripts.Render("~/bundles/jquery")
  @RenderSection("scripts", required: false)

  <script type="text/javascript">
    $(function () {
      var isDemoSite = @ConfigurationManager.AppSettings["IsDemoSite"];
      if (isDemoSite) {
        $('#TestSiteWarning').show();
      }
    });
  </script>
</body>
</html>
